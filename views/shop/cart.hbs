<!-- loop through products in the cart if there are any-->
{{# if this.products }}
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <ul class="list-group">
      <!-- create a new element for each item -->
      {{#each products}}
      <li class="list-group-item">
        <span class="badge">{{this.qty}}</span>
        <span style="font-weight: bold">{{this.item.title}}</span>
        <span class="label label-success">${{this.price}}</span>
      </li>
      {{/each}}
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <!-- total price -->
    <h1>Total: ${{totalPrice}}</h1>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <!-- placeholder checkout button -->
    <button type="button" class="btn btn-success">Checkout</button>
  </div>
</div>
<!-- if no items are in the cart then show this-->
{{ else }}
<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <h2>No items selected.</h2>
  </div>
</div>
{{/if}}
